			<src path="${modatai}" />
			
			<classpath>
				
				<pathelement path="${classpath}" />
				
				
				<fileset dir="lib">
					
					<include name="**/*.jar" />
					
				</fileset>
				
			</classpath>
			
		</javac>
		
		<!--copy todir="${temp}/templates">
		
		<fileset dir="${modatai}/templates"></fileset>
		
	</copy-->
	
	<jar jarfile="${modatai}/modatai.jar"
	     
	     basedir="${temp}" />
	
	<delete file="${moddeploy}/modatai.jar" />
	
	<move file="${modatai}/modatai.jar"
	      
	      toDir="${moddeploy}" />
	<delete dir="${temp}" />
	
</target>	


